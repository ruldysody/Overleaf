% pagestyle
\pagestyle{plain}

% title
\newcommand{\header}[1]{\def\@header{\hspace*{-1em}{\large 卒業論文} \hfill {\large #1}}}
\def\titleEnglish#1{
\begin{center}
  {\large #1}\par\vspace{1em}
\end{center}
}
\newcommand{\studentId}[1]{\def\@studentId{（学籍番号 : #1）}}
\newcommand{\supervisor}[2]{\def\@supervisor{指導教員 \hspace{1em} #1 \hspace{1em} #2}}
\newcommand{\completedDay}[2]{\def\@completedDay{#1 #2}}
\newcommand{\institute}[2]{\def\@institute{#1\\#2}}
\renewcommand{\maketitle}{
\@header
\vspace{4cm}
\begin{center}
  {\LARGE \@title}
\end{center}
\vspace{4cm}
\begin{center}
  {\Large \@author}
\end{center}
\begin{center}
  {\large \@studentId}
\end{center}
\vspace{4cm}
\begin{center}
  {\large \@supervisor}
\end{center}
\vspace{2cm}
\begin{center}
  {\large \@completedDay}
\end{center}
\vfill
\begin{center}
  {\large \@institute}
\end{center}
\thispagestyle{empty}
\clearpage
\addtocounter{page}{-1}
}

\def\abstract{
\vspace{3cm}
\begin{center}
  {\bf {\large 論文要旨}}
\end{center}
\par
\vspace{1em}
}
\def\endabstract{
\thispagestyle{empty}
\clearpage
\addtocounter{page}{-1}
}

\def\abstractEnglish{
\vspace{3cm}
\begin{center}
  {\bf {\large Thesis Abstract}}
\end{center}
\par
\vspace{1em}
}
\def\endabstractEnglish{
\thispagestyle{empty}
\clearpage
\addtocounter{page}{-1}
}

\newcommand{\sign}[4]{\def\@sign{\vspace{2em} #1 \\ \vspace{1.5em} #2 \hspace{0.5em} #3 \\ #4}}
\def\acknowledgments{
\vspace{3cm}
\begin{center}
  {\bf {\large 謝辞}}
\end{center}
\par
\vspace{1em}
}
\def\endacknowledgments{
\begin{flushright}
\@sign
\end{flushright}
\thispagestyle{empty}
\clearpage
\addtocounter{page}{-1}
}

